    <div class="row">
        <div class="col-6 offset-3">
            <div class="card mt-4 round jumbo headerSpacer">
                <div class="card-body editTaskTitle">
                    <h1 class="card-title marginAdjA textcenter">Edit Task</h1>
                </div>
                <div class="editTaskBody">
                    <form action="/api/tasks/{{task.id}}" method="POST">

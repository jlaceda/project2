                      </div>
                      <div class="col-4 text-center">  
                        <button class="btn btn-md btn-primary border border-0 btncenter editTaskBtn" id="delete">Delete</button>
                      </div>
                      <div class="col-4 text-center">  
                        <button href="/" class="btn btn-md btn-primary border border-0 btncenter editTaskBtn" id="cancel">Cancel</button>
                      </div>
                    </div>
                </form>
              </div>
              <div class="card-body editTaskFooter">
                </div>
        </div>
      </div>
    </div>
  </div>
</div>
<script>
  document
    .getElementById("delete")
    .addEventListener("click", function (e) {
      console.log("delete button clicked")
      fetch("/api/tasks/{{task.id}}", { method: "DELETE" })
        .then(function (res) {
          window.location = "/";
        })
        .catch(function (err) {
          console.error(err);
          window.location = "/";
